<% content_for :title, t('page.room_types') %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('page.room_types') %></h1>
    <%= link_to t('room_types.new_room_type'), new_hotel_room_type_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="room_types" class="min-w-full flex flex-row gap-10">
    <% if @room_types.any? %>
      <% @room_types.each do |room_type| %>
        <%= render room_type %>
      <% end %>
    <% else %>
      <p class="text-center my-10"><% t('room_types.room_types.zero') %></p>
    <% end %>
  </div>
</div>
