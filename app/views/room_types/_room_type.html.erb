<div class="flex flex-col p-4 shadow rounded-md max-w-72 min-h-64" id="<%= dom_id room_type %>">
  <%= image_tag room_type.thumbnail, class: "max-w-full" if room_type.thumbnail.attached? %>
  <p class="">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= room_type.name %>
  </p>
  <p class="">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= room_type.price %>
  </p>
  <p class="">
    <strong class="block font-medium mb-1">Room:</strong>
    <%= room_type.room_id %>
  </p>
  <p class="">
    <strong class="block font-medium mb-1">Capacity:</strong>
    <%= room_type.capacity %>
  </p>
  <p class="h-full flex items-end justify-center">
    <%= link_to "Show this room type", hotel_room_type_path(@hotel.id, room_type.id), class: "rounded-md w-full text-center px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  </p>
</div>
