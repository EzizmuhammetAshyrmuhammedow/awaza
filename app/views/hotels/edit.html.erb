<% content_for :title, "Editing hotel" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing hotel</h1>

  <%= render "form", hotel: @hotel, form_action: "edit" %>
  <button class="btn btn-info">
    <%= link_to t('hotel.show_hotel'), @hotel, class: "inline-block font-medium" %>
  </button>
  <button class="btn btn-soft">
    <%= link_to t('hotel.back_to_hotels'), hotels_path, class: "inline-block font-medium" %>

  </button>
</div>
