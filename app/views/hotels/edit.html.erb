<% content_for :title, "Editing hotel" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing hotel</h1>

  <%= render "form", hotel: @hotel, form_action: "edit" %>

  <%= link_to t('hotel.show_hotel'), @hotel, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to t('hotel.back_to_hotels'), hotels_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
