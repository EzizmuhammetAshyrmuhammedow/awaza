<div class="flex flex-col p-4 shadow rounded-md max-w-72 min-h-64" id="<%= dom_id room_type %>">
  <% if room_type.thumbnail.attached? %>
    <%= image_tag room_type.thumbnail.variant(resize_to_fill: [300, 200]), class: "object-cover w-full h-48" %>
  <% end %>
  <p class="">
    <strong class="block font-medium mb-1"><%= t('general.name') %>:</strong>
    <%= room_type.name %>
  </p>
  <p class="">
    <strong class="block font-medium mb-1"><%= t('general.price') %>:</strong>
    <%= room_type.price %>
  </p>
  <p class="">
    <strong class="block font-medium mb-1"><%= t('room_types.capacity') %></strong>
    <%= room_type.capacity %>
  </p>
  <p class="h-full flex items-end justify-center">
    <%= link_to t('room_types.show_room_type'), hotel_room_type_path(@hotel.id, room_type.id), class: "btn btn-soft" %>
  </p>
</div>
