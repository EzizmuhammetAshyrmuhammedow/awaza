<html lang="tk" class="dark:bg-zinc-950" style="height: 100dvh">
  <!DOCTYPE html>
  <head>
    <title><%= content_for(:title) || "Awaza" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0; user-scalable=0;">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>
    <link rel="icon" href="<%= asset_path('icon.png') %>" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= turbo_refreshes_with method: :morph, scroll: :preserve %>
    <meta name="turbo-refresh-scroll" content="preserve">
    <%= stylesheet_link_tag "flatpickr-light", media: "screen", id: "flatpickr-light" %>
    <%= stylesheet_link_tag "flatpickr-dark", media: "screen", id: "flatpickr-dark", disabled: true %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>

    <%= vite_client_tag if Rails.env.development? %>
    <%= vite_javascript_tag "application" %>

  </head>
  <body>
    <%= render(NavBarComponent.new) %>
    <main class="m-2 mt-24">
      <%= yield %>
    </main>
  </body>
</html>
