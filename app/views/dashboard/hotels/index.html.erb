<div class="container mx-auto px-4 py-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('hotel.hotels.plural') %></h1>
    <%= link_to t('hotel.new_hotel'), new_dashboard_hotel_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full border border-gray-300 dark:border-zinc-600 rounded-lg shadow">
      <thead class="border-b dark:bg-zinc-700">
        <tr>
          <th class="text-left p-3 font-medium">ID</th>
          <th class="text-left p-3 font-medium"><%= t('general.name') %></th>
          <th class="text-left p-3 font-medium"><%= t('general.manager') %></th>
          <th class="text-left p-3 font-medium"><%= t('general.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @hotels.each do |hotel| %>
          <tr class="border-b dark:border-b-zinc-600 hover:bg-gray-50 dark:hover:bg-zinc-800 dark:bg-zinc-800">
            <td class="p-3"><%= hotel.id %></td>
            <td class="p-3"><%= hotel.name %></td>
            <td class="p-3"><%= hotel.user&.username || "Unassigned" %></td>
            <td class="p-3 flex flex-row gap-1 justify-center">
              <%= link_to t('hotel.edit_hotel'), edit_dashboard_hotel_path(hotel), class: "px-3 w-auto flex items-center text-center py-1 bg-blue-500 rounded-md hover:bg-blue-600" %>
              <%= button_to t('hotel.delete_hotel'), hotel, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
