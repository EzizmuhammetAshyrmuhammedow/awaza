<% content_for :title, "Showing hotel" %>
<div class="md:w-2/3 w-full mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex flex-col p-4 shadow rounded-md min-h-64">
    <%= image_tag @hotel.thumbnail, class: "max-w-full" if @hotel.thumbnail.attached? %>
    <p class="text-4xl mx-auto">
      <%= @hotel.name %>
    </p>
    <p class="text-xl font-semibold">
      <%= @hotel.description %>
    </p>
    <p class="">
      <strong class="block font-medium mb-1">Rating:</strong>
      <%= @hotel.rating %>
    </p>
  </div>
  <%= link_to "Back to hotels", hotels_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium my-3" %>
  <%= link_to "Comments", hotel_comments_path(@hotel), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 inline-block font-medium my-3" %>
  <%= link_to "Room Types", hotel_room_types_path(@hotel), class: "rounded-md px-3.5 py-2 bg-green-500 hover:bg-green-400 inline-block font-medium my-3" %>
  <% if @user && (@user.admin? || @user.hotel_owner?) %>
    <h1>Additional Actions: </h1>
    <div class="flex flex-row gap-3">
      <%= link_to "Edit this hotel", edit_hotel_path(@hotel), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
      <%= button_to "Destroy this hotel", @hotel, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
    </div>
  <% end %>
</div>
</div>