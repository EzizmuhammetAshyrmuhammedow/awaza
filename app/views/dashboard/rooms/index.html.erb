<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Rooms</h1>
    <%= link_to "New room", new_dashboard_room_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow">
      <thead class="bg-gray-100 border-b">
      <tr>
        <th class="text-left p-3 font-medium">Room ID</th>
        <th class="text-left p-3 font-medium">Room Type</th>
        <th class="text-left p-3 font-medium">Thumbnail</th>
        <th class="text-left p-3 font-medium">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @rooms.each do |room| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="p-3">
            <% room.id %></td>
          <td class="p-3"><%= room.room_type&.name %></td>
          <td class="p-3"><%= image_tag room.thumbnail, class: "w-28 h-20 rounded-sm" if room.thumbnail.attached? %></td>
          <td class="p-3 flex flex-row gap-3">
            <%= link_to "Edit", edit_dashboard_room_path(room), class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600" %>
            <%= button_to "Delete", dashboard_room_path(room), method: :delete, data: { confirm: "Are you sure?" }, class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 cursor-pointer" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

