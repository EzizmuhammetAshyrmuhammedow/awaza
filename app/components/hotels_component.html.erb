<div class="relative w-full overflow-hidden flex flex-col gap-5" x-data="{
  scrollTo: (id) => {
    document.getElementById(id)?.scrollIntoView({
      behavior: 'smooth',
      block: 'nearest',
      inline: 'center'
    });
  }
}">
  <h1 class="text-4xl font-bold text-center"><%= t('hotel.hotels.plural') %></h1>

  <!-- Carousel Container -->
  <div class="carousel carousel-start gap-4 w-full p-4 space-x-4 rounded-box"
       style="scroll-snap-type: x mandatory;">
    <% if @hotels.any? %>
      <% @hotels.each_with_index do |hotel, index| %>
        <div id="hotel-<%= hotel.id %>"
             class="carousel-item relative rounded-lg overflow-hidden shrink-0"
             style="scroll-snap-align: start;">
          <%= link_to hotel_path(hotel), class: "card image-full h-80 w-80 rounded-lg" do %>
            <div class="relative h-full w-full">
              <%= image_tag hotel.thumbnail, class: "object-cover w-full h-full" %>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            </div>
            <div class="card-body self-end">
              <h3 class="text-3xl font-semibold"><%= hotel.name %></h3>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center">
        No hotels available.
      </div>
    <% end %>
  </div>

  <!-- DaisyUI Navigation Buttons -->
  <% if @hotels.any? %>
    <div class="flex justify-center gap-4 w-full">
      <button class="btn btn-circle btn-secondary"
              @click="scrollTo('hotel-<%= @hotels.first.id %>')">
        ❮
      </button>
      <button class="btn btn-circle btn-secondary"
              @click="scrollTo('hotel-<%= @hotels.last.id %>')">
        ❯
      </button>
    </div>
  <% else %>
    <div class="text-center">
      No hotels available.
    </div>
  <% end %>
</div>
